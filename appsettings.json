{
  // Connection strings tell our app where to find the database
  "ConnectionStrings": {
    // For SQLite, we just need a file path - Insurance.db will be created in the project folder
    "DefaultConnection": "Data Source=Insurance.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
