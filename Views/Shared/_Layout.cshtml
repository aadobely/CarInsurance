@* _Layout.cshtml - This is the master template / wrapper for all pages
   Every view gets wrapped in this HTML. Think of it as the "frame" of the website *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* ViewData["Title"] is set in each individual view *@
    <title>@ViewData["Title"] - Car Insurance</title>

    @* Bootstrap 5 from CDN - handles all the styling *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    @* Bootstrap Icons for nice little icons in the nav *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    @* Our custom CSS file *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    @* ---- Navigation Bar ---- *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            @* Brand logo/name on the left *@
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shield-check me-2"></i>CarInsurance
            </a>

            @* Hamburger button for mobile screens *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @* Navigation links *@
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @* ms-auto pushes the links to the right side *@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Insuree" asp-action="Index">
                            <i class="bi bi-people me-1"></i>All Quotes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Insuree" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>New Quote
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Insuree" asp-action="Admin">
                            <i class="bi bi-gear me-1"></i>Admin
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @* ---- Main Content Area ---- *@
    <div class="container mt-4 mb-5">
        @* RenderBody() is where the content of each individual view goes *@
        @RenderBody()
    </div>

    @* ---- Footer ---- *@
    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-center text-muted">
            <small>&copy; @DateTime.Now.Year CarInsurance App &mdash;
                <a asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy</a>
            </small>
        </div>
    </footer>

    @* ---- Scripts ---- *@
    @* jQuery - required by Bootstrap and validation scripts *@
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    @* Bootstrap JS bundle includes Popper for dropdowns, modals etc. *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @* Our custom JavaScript file *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* This renders any scripts that individual views want to add at the bottom *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
